		<import addon="script.skinshortcuts" version="0.4.0"/>
		<import addon="service.skin.widgets" version="0.0.27"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
